{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2018",
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es5", "scripthost", "es2018"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["lib/**/*"]
}
